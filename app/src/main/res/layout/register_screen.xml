<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/title_name"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

    <TextView
            android:text="Username:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/caption_username"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/app_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/input_username"
            android:layout_marginEnd="25dp"/>

    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/caption_password"
            app:layout_constraintTop_toBottomOf="@+id/caption_username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/input_password"
            android:layout_marginEnd="25dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_username"
            app:layout_constraintTop_toTopOf="@+id/caption_username"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_password"
            app:layout_constraintTop_toTopOf="@+id/caption_password"
            app:layout_constraintEnd_toEndOf="@+id/input_username"/>


    <TextView
            android:text="Password (again):"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/caption_password2"
            app:layout_constraintEnd_toStartOf="@+id/input_password2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/caption_password"
            android:layout_marginTop="50dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_password2"
            app:layout_constraintTop_toTopOf="@+id/caption_password2"
            app:layout_constraintEnd_toEndOf="@+id/input_password"/>

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_back"
            app:layout_constraintTop_toTopOf="@+id/button_register"
            app:layout_constraintEnd_toStartOf="@+id/button_register"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_register"
            app:layout_constraintTop_toBottomOf="@+id/input_password2"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.75"/>

</androidx.constraintlayout.widget.ConstraintLayout>